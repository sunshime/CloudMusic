/* pages/square/square.wxss */
@import '../../styles/comment.wxss';

.square {
  padding: 20rpx 30rpx;
  background-color: #F8F8F8;
  /* width: 100vw; */
  height: 100vh;
}

.hot-review {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #7A7A7A;
  border-radius: 15rpx;
}

.hot-lt .lt-top{
  color: #fff;
}

.hot-lt .lt-top .title{
  font-size: 30rpx;
  font-weight: 700;
}

.hot-lt .lt-top .title-icon{
  font-size: 33rpx;
}

.hot-lt .lt-bottom{
  padding-top: 20rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.hot-lt .lt-bottom image{
  width: 30rpx;
  height: 30rpx;
  display: block;
  border-radius: 50%;
  overflow: hidden;
}

.hot-lt .lt-bottom .lt-bt-text{
  flex: 1;
  padding-left: 20rpx;
  color: #CBCBCB;
}

.hot-rt {
  font-size: 32rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  font-weight: 700;
  padding-left: 20rpx;
}

.hot-rt-num{
  font-size: 46rpx;
  padding-top: 10rpx;
  text-align: center;
}